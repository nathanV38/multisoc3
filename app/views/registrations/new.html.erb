<h2>Inscription</h2>
</br
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div>
  <%= f.email_field :email, :autofocus => true, :placeholder => "email", :class => "span4" %></div>

  <div>
  <%= f.password_field :password, :placeholder => "mot de passe", :class => "span4" %></div>

  <div>
  <%= f.password_field :password_confirmation, :placeholder => "confirmation mot de passe", :class => "span4" %></div>
</br>
  <div><%= f.submit "M'inscrire", :class => "btn span4" %></div>
<% end %>


</br></br>

<%= button_to "Retour à l'accueil", :back, :class => "btn span4" %>
<div><%#= link_to "Retour à l'accueil", root_path, :class => "btn span4" %></div>


<%#= render "devise/shared/links" %>