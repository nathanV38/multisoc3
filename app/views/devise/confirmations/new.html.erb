<h3>Renvoyer les instructions pour la confirmation de l'inscription</h3>

<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div>
  <%= f.email_field :email, :autofocus => true, :placeholder => "email", :class => "span4" %></div>

  <div><%= f.submit "Renvoyer les instructions", :class => "btn span4" %></div>
<% end %>

<%= render "devise/shared/links" %>
